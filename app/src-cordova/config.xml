<?xml version='1.0' encoding='utf-8'?>
<widget id="org.cordova.vertoapp" version="0.9.260.14" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Verto</name>
    <description>A multi-currency cryptocurrency wallet</description>
    <author email="support@volentix.io" href="https://volentix.io">Volentix Labs, Inc.</author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-navigation href="https://*/*" />
